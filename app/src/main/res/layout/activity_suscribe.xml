<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lefebvrb.iutshare.LoginActivity">

    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"/>
    </RelativeLayout>

    <TextView
        android:layout_below="@id/navbar"
        android:background="@color/red"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/section_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Inscription"/>

    <ScrollView
        android:layout_below="@id/section_label"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/nom_tv"
                android:text="Nom :"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/nom_et"
                android:inputType="text"
                android:layout_below="@id/nom_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/prenom_tv"
                android:layout_below="@id/nom_et"
                android:text="Prénom :"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/prenom_et"
                android:inputType="text"
                android:layout_below="@id/prenom_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/pseudo_tv"
                android:layout_below="@id/prenom_et"
                android:text="Pseudo :"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/pseudo_et"
                android:inputType="text"
                android:layout_below="@id/pseudo_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/password_tv"
                android:layout_below="@id/pseudo_et"
                android:text="Mot de passe :"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/password_et"
                android:inputType="text"
                android:layout_below="@id/password_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/statut_tv"
                android:textSize="20dp"
                android:text="Vous êtes :"
                android:layout_below="@id/password_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/statut_sp"
                android:layout_alignBaseline="@id/statut_tv"
                android:layout_toRightOf="@id/statut_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Spinner>
            <Button
                android:id="@+id/connexion_bt"
                android:background="@color/red"
                android:textColor="@color/white"
                android:padding="5dp"
                android:layout_margin="16dp"
                android:layout_centerHorizontal="true"
                android:text="S'inscrire"
                android:layout_below="@id/statut_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
